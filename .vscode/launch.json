    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "run adv-of-code-2022",
            "cargo": {
                "args": [
                    "build",
                    "--bin=adv-of-code-2022",
                    "--package=adv-of-code-2022",
                    "--manifest-path=${workspaceFolder}/Cargo.toml" //because of reasons https://github.com/vadimcn/vscode-lldb/issues/491#issuecomment-886121267
                ]
            },
            "args": ["day10", "inputs/day10/test_input.txt"],
            "cwd": "${workspaceFolder}"
        },

